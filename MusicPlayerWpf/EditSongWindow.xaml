<Window x:Class="MusicPlayerWpf.EditSongWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Song" Height="520" Width="720">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
            <TextBlock Text="File:" FontWeight="Bold"/>
            <TextBlock Text="{Binding FilePath}" TextWrapping="Wrap"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,12,12,0">
            <TextBlock Text="Cover" FontWeight="Bold"/>
            <Border Width="220" Height="220" BorderBrush="LightGray" BorderThickness="1" Margin="0,8,0,0">
                <Image Source="{Binding CurrentCoverImagePath}" Stretch="UniformToFill"/>
            </Border>

            <TextBlock Text="Images" FontWeight="Bold" Margin="0,12,0,0"/>
            <ListBox ItemsSource="{Binding UserImages}"
                     SelectedItem="{Binding SelectedUserImage}"
                     Height="160"/>
            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                <Button Content="Add" Width="80" Margin="0,0,8,0" Command="{Binding AddImageCommand}"/>
                <Button Content="Remove" Width="80" Command="{Binding RemoveImageCommand}"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,12,0,0">
            <TextBlock Text="Track Name" FontWeight="Bold"/>
            <TextBox Text="{Binding TrackName, UpdateSourceTrigger=PropertyChanged}" Margin="0,6,0,12"/>

            <TextBlock Text="Artist" FontWeight="Bold"/>
            <TextBlock Text="{Binding ArtistName}" Margin="0,6,0,12"/>

            <TextBlock Text="Album" FontWeight="Bold"/>
            <TextBlock Text="{Binding AlbumName}" Margin="0,6,0,12"/>

            <TextBlock Text="Artwork URL" FontWeight="Bold"/>
            <TextBlock Text="{Binding ApiArtworkUrl}" TextWrapping="Wrap" Margin="0,6,0,12"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <TextBlock Text="{Binding StatusMessage}" VerticalAlignment="Center" Margin="0,0,12,0"/>
            <Button Content="Save" Width="120" Command="{Binding SaveCommand}"/>
        </StackPanel>
    </Grid>
</Window>
