<Window x:Class="MusicPlayerWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Player" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <ListBox Grid.Column="0"
                 ItemsSource="{Binding Songs}"
                 SelectedItem="{Binding SelectedSong}"
                 MouseDoubleClick="SongsListBox_MouseDoubleClick"
                 DisplayMemberPath="FileNameWithoutExt"/>

        <StackPanel Grid.Column="1" Margin="12,0,0,0">
            <Button Content="Play" Width="120" Command="{Binding PlayCommand}"/>

            <TextBlock Margin="0,10,0,0" Text="{Binding DisplayFileName}"/>
            <TextBlock Text="{Binding DisplayFilePath}" TextWrapping="Wrap"/>

            <Separator Margin="0,10,0,10"/>

            <TextBlock Text="Track:" FontWeight="Bold"/>
            <TextBlock Text="{Binding TrackName}"/>

            <TextBlock Margin="0,8,0,0" Text="Artist:" FontWeight="Bold"/>
            <TextBlock Text="{Binding ArtistName}"/>

            <TextBlock Margin="0,8,0,0" Text="Album:" FontWeight="Bold"/>
            <TextBlock Text="{Binding AlbumName}"/>

            <TextBlock Margin="0,8,0,0" Text="Status:" FontWeight="Bold"/>
            <TextBlock Text="{Binding StatusMessage}"/>

            <TextBlock Margin="0,8,0,0" Text="Album Cover:" FontWeight="Bold"/>
            <Border Width="180" Height="180" BorderBrush="LightGray" BorderThickness="1">
                <Image Source="{Binding CurrentCoverImagePath}" Stretch="UniformToFill"/>
            </Border>

            <TextBlock Margin="0,8,0,0" Text="ArtworkUrl:" FontWeight="Bold"/>
            <TextBlock Text="{Binding ArtworkUrl}" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>
