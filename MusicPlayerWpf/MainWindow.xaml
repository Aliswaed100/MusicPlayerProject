<Window x:Class="MusicPlayerWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Music Player" Height="480" Width="900">
  <Grid Margin="10">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="2*"/>
      <ColumnDefinition Width="3*"/>
    </Grid.ColumnDefinitions>

    <ListBox x:Name="SongsList"
             Grid.Column="0"
             ItemsSource="{Binding Songs}"
             SelectedItem="{Binding SelectedSong}"
             DisplayMemberPath="FileNameWithoutExt"
             MouseDoubleClick="SongsList_MouseDoubleClick"/>

    <StackPanel Grid.Column="1" Margin="12,0,0,0">
      <StackPanel Orientation="Horizontal">
        <Button Content="Play" Width="120" Command="{Binding PlayCommand}"/>
        <Button Content="Edit" Width="120" Margin="10,0,0,0" Command="{Binding EditCommand}"/>
      </StackPanel>

      <TextBlock Margin="0,10,0,0" Text="Local file:" FontWeight="Bold"/>
      <TextBlock Text="{Binding DisplayFileName}"/>
      <TextBlock Text="{Binding DisplayFilePath}" TextWrapping="Wrap"/>

      <Separator Margin="0,10,0,10"/>

      <TextBlock Text="Track:" FontWeight="Bold"/>
      <TextBlock Text="{Binding TrackName}"/>

      <TextBlock Margin="0,8,0,0" Text="Artist:" FontWeight="Bold"/>
      <TextBlock Text="{Binding ArtistName}"/>

      <TextBlock Margin="0,8,0,0" Text="Album:" FontWeight="Bold"/>
      <TextBlock Text="{Binding AlbumName}"/>

      <TextBlock Margin="0,8,0,0" Text="Status:" FontWeight="Bold"/>
      <TextBlock Text="{Binding StatusMessage}"/>

      <TextBlock Margin="0,8,0,0" Text="Cover:" FontWeight="Bold"/>
      <Border Width="220" Height="220" BorderBrush="LightGray" BorderThickness="1" Margin="0,8,0,0">
        <Image Source="{Binding CurrentCoverImagePath}" Stretch="UniformToFill"/>
      </Border>
    </StackPanel>
  </Grid>
</Window>
